div(id='card')
	div(class='block' id='avatar-block'): img(id='avatar-img' src=avatar_url)
	div(class='block' id='name-block')
		div(id='guild-block'): p(id='username') #{guild}
		div(id='username-block'): p(id='guild-name') #{username}
	div(class='block' id='info-block')
		div(class='long-info bio' id='bio-block') <strong>Bio:</strong> #{bio}
		ul(class='column' id='1')
		
			li: div(class='info' id='points')
				div(class='field title') Points
				div(class='field value') #{points}
				
			li: div(class='info' id='joined')
				div(class='field title') Joined
				div(class='field value') #{joined}
				
			li: div(class='info' id='bot')
				div(class='field title') Bot
				div(class='field value') #{bot}
				
		ul(class='column' id='2')
			li: div(class='info' id='nickname')
				div(class='field title') Nickname
				div(class='field value') #{nickname}
				
			li: div(class='info' id='Permissions')
				div(class='field title') Permissions
				div(class='field value') #{permissions}
				
			li: div(class='info' id='Joined Discord')
				div(class='field title') Joined Discord
				div(class='field value') #{joined_discord}
				
		ul(class='column' id='3')
			li: div(class='info' id='presence')
				div(class='field title') Presence
				div(class='field value') #{presence}
			li: div(class='info' id='playing_status')
				div(class='field title') Playing status
				div(class='field value') #{playing_status}
			li: div(class='info' id='mutal_servers')
				div(class='field title') Mutal servers
				div(class='field value') #{mutual_servers}

		div(class='long-info roles' id='roles-block') <strong>Roles[#{role_count}]:</strong> #{roles}